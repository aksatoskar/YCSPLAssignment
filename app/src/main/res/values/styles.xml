<resources>
    <style name="primaryButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/primary_btn_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_rounded_corner_white</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="error_appearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/error_color</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>

